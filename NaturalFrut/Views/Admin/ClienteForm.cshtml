@model NaturalFrut.App_BLL.ViewModels.ClienteViewModel
@{
    ViewBag.Title = "ClienteForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Titulo</h2>

<h4>Complete los campos del formulario para dar de alta un nuevo cliente</h4>
<br />

@using (Html.BeginForm("Guardar", "Admin"))
{

    <div class="row">
        @Html.ValidationSummary(true, "Please fix the following errors")
    </div>
    
    <div class="row">

        <!--Agrupamos campos de la columna izquierda-->
        <div class="col-sm-6">

            <div class="form-group">
                @Html.LabelFor(c => c.Nombre)
                @Html.TextBoxFor(c => c.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Nombre)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.RazonSocial)
                @Html.TextBoxFor(c => c.RazonSocial, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.RazonSocial)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Email)
                @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Email)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Direccion)
                @Html.TextBoxFor(c => c.Direccion, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Direccion)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Provincia)
                @Html.TextBoxFor(c => c.Provincia, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Provincia)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Localidad)
                @Html.TextBoxFor(c => c.Localidad, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Localidad)
            </div>

        </div>

        <!--Agrupamos campos de la columna derecha-->
        <div class="col-sm-6">

            <div class="form-group">
                @Html.LabelFor(c => c.TelefonoNegocio)
                @Html.TextBoxFor(c => c.TelefonoNegocio, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.TelefonoNegocio)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.TelefonoCelular)
                @Html.TextBoxFor(c => c.TelefonoCelular, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.TelefonoCelular)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Cuit)
                @Html.TextBoxFor(c => c.Cuit, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Cuit)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Iibb)
                @Html.TextBoxFor(c => c.Iibb, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Iibb)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.CondicionIVAId)
                @Html.DropDownListFor(c => c.CondicionIVAId, new SelectList(Model.CondicionIVA, "Id", "Nombre"), "Seleccione Condicion ante IVA", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.CondicionIVAId)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.TipoClienteId)
                @Html.DropDownListFor(c => c.TipoClienteId, new SelectList(Model.TipoCliente, "Id", "Nombre"), "Seleccione Tipo de Cliente", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.TipoClienteId)
            </div>

        </div>

    </div>
    
    <div class="row">
        <div class="col-sm-12">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(c => c.ID)
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-danger" value="Cancelar" onclick="location.href='@Url.Action("Index", "Home")';">Cancelar</button>          

        </div>
    </div>

    

    


    
}

@section scripts {

    @Scripts.Render("~/bundles/jqueryval")

}