@model IEnumerable<NaturalFrut.Models.Marca>
@{
    ViewBag.Title = "Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marcas</h2>

<div class="row">
    <div class="col-sm-12">
        <p>
            @Html.ActionLink("Agregar nuevo", "NuevoMarca", null, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">

        @if (!Model.Any())
        {
            <h2>No se han cargado aún Datos en el sistema</h2>
        }
        else
        {

            <table class="table table-bordered table-hover">
                <tr>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
                <tbody>
                    @foreach (var marca in Model)
                    {
                        <tr>
                            <td>@marca.Nombre</td>
                            <td>
                                @Html.ActionLink("Editar", "EditarMarca", "Admin", new { id = marca.ID }, null)
                                &nbsp;
                                @Html.ActionLink("Borrar", "BorrarMarca", "Admin", new { id = marca.ID }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        }

    </div>
</div>