@model NaturalFrut.Models.Lista
@{
    ViewBag.Title = "Lista de Precios - Formulario de Carga";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Precios</h2>

<h4>Ingrese un nombre para la lista de precios</h4>
<br />

@using (Html.BeginForm("GuardarLista", "Admin"))
{
    <div class="row">
        <div class="col-sm-12">

            @Html.ValidationSummary(true, "Por favor revise los siguientes errores:")

        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">

            <div class="form-group">
                @Html.LabelFor(c => c.Nombre)
                @Html.TextBoxFor(c => c.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Nombre)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.PorcentajeAumento)
                @Html.TextBoxFor(c => c.PorcentajeAumento, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.PorcentajeAumento)
            </div>

        </div>
    </div>   

    <div class="row">
        <div class="col-sm-12">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(c => c.ID)
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-danger" value="Cancelar" onclick="location.href='@Url.Action("Index", "Admin")';">Cancelar</button>

        </div>
    </div>
}

@section scripts {

    @Scripts.Render("~/bundles/jqueryval")

}