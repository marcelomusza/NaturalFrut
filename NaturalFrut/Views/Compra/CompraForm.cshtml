@model dynamic
@{
    ViewBag.Title = "CargarCompra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Ingresar Compra</h2>

<form id="compraform">

    <div class="row">

        <!--Agrupamos campos de la columna izquierda-->
        <div class="col-sm-6">

            <div class="form-group">
                <label>N° Compra</label>
                <input id="numerocompra" name="numerocompra" required type="text" value="@ViewBag.NumeroCompra" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label>Fecha</label>
                <input id="fecha" name="fecha" required type="datetime" value="@ViewBag.Fecha.ToString("dd/MM/yyyy HH:mm")" class="form-control" />
            </div>

            <div class="form-group">
                <label>Clasificación</label>
                <div style="display:flex;">
                    <select id="clasificacion" name="clasificacion" class="form-control" required>
                        <option value="" selected="selected">Seleccione...</option>
                        @foreach (var clasificacion in @ViewBag.Clasificacion)
                {
                    <option value="@clasificacion.ID">@clasificacion.Nombre</option>
        }
                    </select>&nbsp;&nbsp;
                    <a href="#" onclick="NuevaClasificacionModal(0)"><img src="~/Content/Images/addSign.png" style="vertical-align:-webkit-baseline-middle;" title="Ingresar Nueva clasificacion" /></a>
                </div>
                <label class="error field-validation-valid" for="clasificacion" data-valmsg-replace="true"></label>
            </div>

            <div class="form-group">
                <label>Factura</label>
                <input id="factura" name="factura" type="text" value="" class="form-control" />
            </div>


            <div class="form-group">
                <label>Tipo Factura</label>
                <select id="tipofactura" name="tipofactura" class="form-control">
                    <option value="">seleccione...</option>
                    <option value="Nota de Credito">Nota de Credito</option>
                    <option value="Nota de Debito">Nota de Debito</option>
                    <option value="Factura">Factura</option>
                </select>
            </div>

            <div class="form-group">
                <label>Local</label>
                <select id="local" name="local" class="form-control">
                    <option value="">seleccione...</option>
                    <option value="Mitre">Mitre</option>
                    <option value="Laprida">Laprida</option>
                    <option value="Mayorista">Mayorista</option>
                </select>
            </div>

            @*<div class="form-group">
            <label>Tipo Factura</label>
            <input id="tipofactura" name="tipofactura" required type="text" value="" class="form-control" />
        </div>*@



            <div class="form-group">
                <label>Suma Total</label>
                <input id="sumatotal" name="sumatotal" type="text" value="" class="form-control js-formatvalue" onkeyup="ValidarPunto(this);" />
            </div>

            <div class="form-group">
                <label>Descuento %</label>
                <input id="descuentoporc" name="descuentoporc" type="text" value="" class="form-control" onkeyup="ValidarPunto(this);" />
            </div>

            <div class="form-group">
                <label>Descuento</label>
                <input id="descuentoC" name="descuentoC" type="text" value="" class="form-control js-formatvalue" disabled />
            </div>

            <div class="form-group">
                <label>Subtotal</label>
                <input id="subtotal" name="subtotal" type="text" value="" class="form-control js-formatvalue" disabled />
            </div>

            <div class="form-group">
                <label>Importe no Gravado</label>
                <input id="impnogravado" name="impnogravado" type="text" value="" class="form-control js-formatvalue" onkeyup="ValidarPunto(this);" />
            </div>

