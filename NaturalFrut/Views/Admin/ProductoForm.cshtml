@model NaturalFrut.App_BLL.ViewModels.ProductoViewModel
@{
    ViewBag.Title = "ProductoForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>

<h4>Complete los campos del formulario para dar de alta un nuevo producto</h4>
<br />

@using (Html.BeginForm("GuardarProducto", "Admin"))
{

    <div class="row">
        @Html.ValidationSummary(true, "Por favor revise los siguientes errores:")
    </div>

    <div class="row">

        <!--Agrupamos campos de la columna izquierda-->
        <div class="col-sm-6">

            <div class="form-group">
                @Html.LabelFor(c => c.Descripcion)
                @Html.TextBoxFor(c => c.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Descripcion)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Cantidad)
                @Html.TextBoxFor(c => c.Cantidad, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Cantidad)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.CategoriaId)
                @Html.DropDownListFor(c => c.CategoriaId, new SelectList(Model.Categoria, "Id", "Nombre"), "Seleccione la Categoría", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.CategoriaId)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.MarcaId)
                @Html.DropDownListFor(c => c.MarcaId, new SelectList(Model.Categoria, "Id", "Nombre"), "Seleccione la Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.MarcaId)
            </div>

        </div>      

    </div>

    <div class="row">
        <div class="col-sm-12">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(c => c.ID)
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-danger" value="Cancelar" onclick="location.href='@Url.Action("Index", "Home")';">Cancelar</button>

        </div>
    </div>







}

@section scripts {

    @Scripts.Render("~/bundles/jqueryval")

}



